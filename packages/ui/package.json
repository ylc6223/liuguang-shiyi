{
  "name": "@packages/ui",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "description": "Shared UI components (shadcn-based) for monorepo apps.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./src/styles.css",
    "./ui.css": "./dist/ui.css",
    "./components/*": "./src/components/*",
    "./components/ui/*": "./src/components/ui/*",
    "./lib/*": "./src/lib/*"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && pnpm run build:css",
    "build:css": "postcss src/styles.build.css -o dist/ui.css",
    "dev": "echo 'Develop UI in Storybook or consuming apps'",
    "lint": "echo 'lint placeholder'",
    "test": "echo 'test placeholder'",
    "format": "echo 'format placeholder'",
    "storybook": "storybook dev -p 7007",
    "build-storybook": "storybook build",
    "shadcn:init": "pnpm dlx shadcn@latest init --skip-install",
    "shadcn:add-all": "node ./tools/shadcn-add-all.cjs"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@packages/tailwind-config": "workspace:*",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@tailwindcss/postcss": "^4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.0",
    "storybook": "^8.6.14",
    "tailwindcss": "^4",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.544.0",
    "next-themes": "^0.4.6",
    "react-day-picker": "^9.11.0",
    "react-hook-form": "^7.63.0",
    "react-resizable-panels": "^3.0.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
